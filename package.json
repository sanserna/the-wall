{
  "name": "the-wall",
  "version": "0.0.1",
  "description": "A middleware exposing apis to frontend applications",
  "main": "src/index.js",
  "license": "MIT",
  "contributors": [
    "Santiago Serna"
  ],
  "scripts": {
    "start": "NODE_PATH=. nodemon index.js",
    "start:prod": "NODE_PATH=. node index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./{src,tests}/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "yarn lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "tests/**/*",
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "awilix": "^8.0.0",
    "axios": "^1.2.1",
    "axios-mock-adapter": "^1.18.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.7.0",
    "jsonapi-serializer": "^3.6.6",
    "morgan": "^1.10.0",
    "qs": "^6.9.4",
    "ramda": "^0.28.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "husky": "^4.2.5",
    "jest": "^29.3.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3"
  }
}
